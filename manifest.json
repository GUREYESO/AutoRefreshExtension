{
  "manifest_version": 3,
  "name": "Auto Refresh Extension",
  "version": "1.0",
  "permissions": ["tabs"],
  "author": "gustavo-adolfo.a.reyes@capgemini.com",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}